/* component/stepper/stepper.wxss *
/*主容器*/ 
.stepper { 
    width: 160rpx; 
    height: 52rpx; 
    /*给主容器设一个边框*/ 
    border: 1rpx solid rgba(0, 0, 0, 0.2); 
    border-radius: 6rpx; 
  } 
  /*加号和减号*/ 
  .stepper text { 
    width: 48.5rpx; 
    line-height: 52rpx; 
    text-align: center; 
    float: left; 
  } 
     
  /*数值*/ 
  .stepper input { 
    width: 60rpx; 
    height: 52rpx; 
    float: left; 
    margin: 0 auto; 
    text-align: center; 
    font-size: 24rpx; 
    /*给中间的input设置左右边框即可*/ 
    border-left: 1rpx solid rgba(0, 0, 0, 0.2); 
    border-right: 1rpx solid rgba(0, 0, 0, 0.2); 
  } 
     
  /*普通样式*/ 
  .stepper .normal{ 
    color: #fdad53; 
  } 
     
  /*禁用样式*/ 
  .stepper .disabled{ 
    color: #ccc; 
  }