<!--component/stepper/stepper.wxml-->
<!-- 主容器 --> 
<view class="stepper"> 
  <!-- 减号 --> 
  <text class="{{num == min ? 'disabled' : 'normal'}}" bindtap="bindMinus">-</text> 
  <!-- 数值 --> 
  <input type="number" bindchange="bindManual" value="{{num}}" /> 
  <!-- 加号 --> 
  <text class="{{num == max ? 'disabled' : 'normal'}}" bindtap="bindPlus">+</text>
</view>