.goods-info-box{
    display: flex;
    background-color: #f2f2f2;
    border-radius: 10rpx;
    margin: 5rpx 35rpx;
    padding:20rpx;
}
.goods-info-box .goods-info-img{
    width: 120rpx;
    height: 120rpx;
}
.goods-info-box .goods-info-info{
    margin-left: 10rpx;
    width: 80%;
}
.goods-info-box .goods-info-info .goods-name-pirce{
    width: 100%;
    display: flex;
    justify-content:space-between;
    font-size: 28rpx;
    line-height: 1.7;
    font-weight: 550;
}
.goods-info-box .goods-info-info .goods-specs{
    font-size: 22rpx;
    color: #9a9a9a;
    line-height: 1.3;
}
.goods-info-box .goods-info-info .goods-num{
    font-size: 22rpx;
    color: #9a9a9a;
    line-height: 1.3;
}